@model Contact

@{
    ViewBag.Title = "Contact Details";
}

<h2>Contact Details</h2>

<ul class="list-group">
    <li class="list-group-item">
        <label>Name:</label>
        @Model.Firstname @Model.Lastname
    </li>
    <li class="list-group-item">
        <label>Phone:</label>
        @Model.Phone
    </li>
    <li class="list-group-item">
        <label class="w-10">Email:</label>
        @Model.Email
    </li>
    <li class="list-group-item">
        <label>Category:</label>
        @Model.Category.Name
    </li>
    <li class="list-group-item">
        <label>Organization:</label>
        @Model.Organization
    </li>
    <li class="list-group-item">
        <label>Date added:</label>
        @Model.DateAdded.ToShortDateString() at @Model.DateAdded.ToShortTimeString()
    </li>
    <li class="list-group-item">
        <a asp-action="Edit" asp-controller="Contact"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
           class="btn btn-dark">Edit</a>

        <a asp-action="Delete" asp-controller="Contact"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug"
           class="btn btn-dark">Delete</a>

        <a asp-action="Index" asp-controller="Home"
           class="btn btn-dark">Home</a>
    </li>
</ul>

